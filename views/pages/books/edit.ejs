<form id="<%= formAction %>-form" class="hide-me" action="/books<%= 'update' === formAction ?
  book.id : '' %>" method="post">
  <input type="hidden" name="_method" value="<%= 'update' === formAction ? 'put' : 'post' %>"
  <input type="text" name="title" value="<%= books.title %>" required>
  <input type="text" name="author" value="<%= books.author %>" required>
  <input type="text" name="isbn" value="<%= books.isbn %>" required>
  <input type="text" name="image_url" value="<%= books.image_url %>" required>
  <textarea name="description" cols="30" rows="5"><%= books.description %></textarea>
  <input type="text" name="bookshelf" id="bookshelf" required>

  <button class="show-me" type="submit">Save Book</button>
</form>
