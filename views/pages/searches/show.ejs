<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Collection</title>
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Book Collection</title>
      <link rel="stylesheet" href="/public/styles.css/reset.css">
      <link rel="stylesheet" href="/public/styles.css/icons.css">
      <link rel="stylesheet" href="/public/styles.css/base.css">
      <link rel="stylesheet" href="/public/styles.css/layout.css">
      <link rel="stylesheet" href="/public/styles.css/modules/error.css">
      <link rel="stylesheet" href="/public/styles.css/modules/partials/header.css">
      <link rel="stylesheet" href="/public/styles.css/modules/partials/footer.css">
      <link rel="icon" type="image/png" href="https://www.freeiconspng.com/uploads/book-icon--icon-search-engine-6.png">
      <link rel="stylesheet" href="/public/styles.css/modules/searches/show.css">
      <link rel="stylesheet" href="/public/styles.css/modules/searches/new.css">
    </head>
  <body>
    <header>
      <div>
        <a href="/">
          <h1>Best Books!</h1>
        </a>
      </div>
      <nav>
        <div class="icon-menu"></div>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/searches/new">Search Books</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <h4>Search Results</h4>
      <ul class="search-results">
        <% results.forEach(books => { %>
          <li data-books-id="<%= books.isbn %>">
            <div class="books-container">
              <img src="<%= books.image_url %>" >
              <section>
                <h3><%= books.title %></h3>
                <span>Author: <%= books.author %></span>
                <p class="desc">Description: <%= books.description %></p> 
                <button class="detail-button select-button" type="submit">Select this book</button>

                <section class="hide-me" id="hidden-form">
                  <form action="/books" method="post" class="form-container">
                    <input type="text" name="title" value="<% books.title %>" >
                    <input type="text" name="author" value="<% books.author %>" >
                    <input type="text" name="isbn" value="<% books.isbn %>" >
                    <input type="text" name="image_url" value="<% books.image_url %>" >
                    <input type="text" name="description" value="<% books.description %>" >
                    <input type="text" name="bookshelf" value="<% books.bookshelf %>" >
                    <button type="submit" class="add-button">Add to library</button>
                  </form>
                  </section>  
            </section>
          </li>
        <% }) %>
      </ul>
    </main>
    <footer>
      <ul>
        <li><span class="icon-mail2"><a href=""></a></span></li>
        <li><span class="icon-twitter"><a href=""></a></span></li>
        <li><span class="icon-github"><a href=""></a></span></li>
        <li><span class="icon-linkedin2"><a href=""></a></span></li>
      </ul>
    </footer>
    <script src="/server.js"></script>
  </body>
</html>

